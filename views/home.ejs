<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home | Blogify</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <style>
    :root {
      --primary-color: #3498db;
      --secondary-color: #2c3e50;
      --success-color: #27ae60;
      --danger-color: #e74c3c;
      --dark-bg: #1a1a1a;
      --card-bg: #2a2a2a;
      --text-primary: #ffffff;
      --text-secondary: #b0b0b0;
      --border-color: #404040;
      --hover-color: #3a3a3a;
    }

    body {
      background-color: var(--dark-bg);
      color: var(--text-primary);
      margin: 0;
      font-family: 'Segoe UI', Arial, sans-serif;
      line-height: 1.6;
    }

    .main-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 5rem 1rem 2rem;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-primary);
    }

    .alert {
      padding: 1rem;
      margin-bottom: 1.5rem;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .alert-success {
      background-color: rgba(39, 174, 96, 0.1);
      color: var(--success-color);
    }

    .alert-error {
      background-color: rgba(231, 76, 60, 0.1);
      color: var(--danger-color);
    }

    .blog-card {
      background-color: var(--card-bg);
      border-radius: 12px;
      border: 1px solid var(--border-color);
      padding: 1.5rem;
      margin-bottom: 2rem;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .blog-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .blog-card img {
      max-width: 100%;
      border-radius: 8px;
      margin-bottom: 1rem;
      object-fit: cover;
    }

    .author-info {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .author-img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    .author-info a {
      color: var(--primary-color);
      text-decoration: none;
      font-weight: bold;
    }

    .author-info a:hover {
      text-decoration: underline;
    }

    .author-info span {
      color: var(--text-secondary);
      font-size: 0.9rem;
    }

    .blog-card h2 a {
      font-size: 1.5rem;
      color: var(--primary-color);
      text-decoration: none;
      transition: color 0.3s;
    }

    .blog-card h2 a:hover {
      color: #2980b9;
    }

    .blog-excerpt {
      color: var(--text-secondary);
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .blog-excerpt a {
      color: var(--primary-color);
      text-decoration: none;
    }

    .blog-excerpt a:hover {
      text-decoration: underline;
    }

    .blog-actions {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      padding-top: 1rem;
      border-top: 1px solid var(--border-color);
    }

    .action-btn, .follow-btn, .view-btn {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 6px;
      color: var(--text-primary);
      cursor: pointer;
      font-size: 0.9rem;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .action-btn {
      background-color: var(--primary-color);
    }

    .action-btn.liked {
      background-color: var(--danger-color);
    }

    .action-btn:hover {
      background-color: #2980b9;
      transform: scale(1.05);
    }

    .follow-btn {
      background-color: var(--success-color);
    }

    .follow-btn.following {
      background-color: var(--danger-color);
    }

    .follow-btn:hover {
      background-color: #219653;
      transform: scale(1.05);
    }

    .follow-btn.following:hover {
      background-color: #c0392b;
    }

    .view-btn {
      background-color: var(--primary-color);
      text-decoration: none;
    }

    .view-btn:hover {
      background-color: #2980b9;
      transform: scale(1.05);
    }

    .comment {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      padding: 1rem;
      background-color: var(--hover-color);
      border-radius: 8px;
    }

    .comment img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    .comment-content {
      flex: 1;
    }

    .comment-author {
      font-weight: bold;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .comment-text {
      color: var(--text-secondary);
      margin-bottom: 0.5rem;
    }

    .comment-time {
      font-size: 0.8rem;
      color: var(--text-secondary);
    }

    .modal {
      display: none;
      position: fixed;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 80vh;
      overflow-y: auto;
      background-color: var(--card-bg);
      padding: 20px;
      box-sizing: border-box;
      z-index: 1000;
      transform: translateY(100%);
      transition: transform 0.3s ease-out;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
      box-shadow: 0 -4px 10px rgba(0,0,0,0.3);
    }

    .modal.active {
      transform: translateY(0);
    }

    .close-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background: none;
      border: none;
      color: var(--text-primary);
      font-size: 1.5rem;
      cursor: pointer;
      transition: color 0.3s;
    }

    .close-btn:hover {
      color: var(--danger-color);
    }

    @media (max-width: 768px) {
      .main-container {
        padding: 4rem 1rem 1rem;
      }

      h1 {
        font-size: 1.5rem;
      }

      .blog-card h2 a {
        font-size: 1.2rem;
      }

      .blog-actions {
        flex-direction: column;
        gap: 0.5rem;
      }
    }

    /* Animations */
    .blog-card {
      animation: slideIn 0.5s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header', { user }) %>
  <div class="main-container">
    <h1><i class="fas fa-blog"></i> Latest Blogs</h1>

    <% if (success_msg) { %>
      <p class="alert alert-success"><i class="fas fa-check-circle"></i> <%= success_msg %></p>
    <% } %>
    <% if (error_msg) { %>
      <p class="alert alert-error"><i class="fas fa-exclamation-circle"></i> <%= error_msg %></p>
    <% } %>

    <% blogs.forEach(blog => { %>
      <div class="blog-card">
        <div class="author-info">
          <img src="<%= blog.createdBy.profileImageURL %>" alt="Profile Image" class="author-img">
          <div>
            <a href="/profile/<%= blog.createdBy._id %>"><%= blog.createdBy.fullname %></a>
            <span><i class="fas fa-clock"></i> <%= moment(blog.createdAt).fromNow() %></span>
          </div>
        </div>
        <h2><a href="/blog/<%= blog._id %>"><%= blog.title %></a></h2>
        <% if (blog.coverImage) { %>
          <img src="<%= blog.coverImage %>" alt="Cover Image">
        <% } %>
        <p class="blog-excerpt"><%= blog.body.substring(0, 200) %>... <a href="/blog/<%= blog._id %>">Read more</a></p>
        <div class="blog-actions">
          <% if (user) { %>
            <form action="/blog/<%= blog._id %>/like" method="POST">
              <button class="action-btn <%= blog.likes.includes(user._id) ? 'liked' : '' %>" type="submit">
                <i class="fas <%= blog.likes.includes(user._id) ? 'fa-heart' : 'fa-heart-broken' %>"></i>
                <%= blog.likes.includes(user._id) ? 'Unlike' : 'Like' %> (<%= blog.likes.length %>)
              </button>
            </form>
            <form action="<%= blog.isFollowing ? '/user/unfollow/' : '/user/follow/' %><%= blog.createdBy._id %>" method="POST">
              <button class="follow-btn <%= blog.isFollowing ? 'following' : '' %>" type="submit">
                <i class="fas <%= blog.isFollowing ? 'fa-user-minus' : 'fa-user-plus' %>"></i>
                <%= blog.isFollowing ? 'Unfollow' : 'Follow' %>
              </button>
            </form>
          <% } %>
          <button class="action-btn" onclick="showComments('<%= blog._id %>')">
            <i class="fas fa-comments"></i> View Comments (<%= blog.comments.length %>)
          </button>
        </div>
      </div>
      <div id="commentsModal-<%= blog._id %>" class="modal">
        <button class="close-btn" onclick="hideComments('<%= blog._id %>')">&times;</button>
        <h3><i class="fas fa-comments"></i> Comments</h3>
        <% blog.comments.forEach(comment => { %>
          <div class="comment">
            <img src="<%= comment.createdBy.profileImageURL %>" alt="Profile Image">
            <div class="comment-content">
              <div class="comment-author"><%= comment.createdBy.fullname %></div>
              <div class="comment-text"><%= comment.content %></div>
              <div class="comment-time"><i class="fas fa-clock"></i> <%= moment(comment.createdAt).fromNow() %></div>
            </div>
          </div>
        <% }) %>
      </div>
    <% }) %>
  </div>
  <script>
    function showComments(id) {
      let modal = document.getElementById('commentsModal-' + id);
      modal.style.display = 'block';
      setTimeout(() => {
        modal.classList.add('active');
      }, 10);
    }

    function hideComments(id) {
      let modal = document.getElementById('commentsModal-' + id);
      modal.classList.remove('active');
      setTimeout(() => {
        modal.style.display = 'none';
      }, 300);
    }
  </script>
</body>
</html>
